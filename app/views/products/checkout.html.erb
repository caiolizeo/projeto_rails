<div class="container">
  <%if Product.where(selected: 1).size.positive?%>
    <p class='title'>Lista de Reserva</p>
    <table>
      <thead>
        <th>Nome</th>
        <th>Categoria</th>
        <th>PreÃ§o</th>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td class='t_area'><%= product.name%></td>
            <td class='t_area'><%= product.category%></td>
            <td class='t_area'>R$<%= product.value%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= button_to 'Finalizar reserva', checkout_finish_path, :method => :delete, :class => 'checkout_button'%>
